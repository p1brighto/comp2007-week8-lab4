@model IEnumerable<comp2007_week8_lab4.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h2>Department List</h2>

        <p>
            <a href="@Url.Action("Create","Departments")" class="btn btn-success"><i class="fa fa-plus fa-lg"></i>Add Department</a>
        </p>
        <table class="table table-striped table-hover table-bordered table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Budget)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Budget)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Departments", new { id = item.DepartmentID })" class="btn btn-primary"><i class="fa fa-edit fa-lg"></i>Edit</a>
                        <a href="@Url.Action("Details","Departments", new { id = item.DepartmentID })" class="btn btn-default"><i class="fa fa-eye fa-lg"></i>Details</a>
                        <a href="@Url.Action("Delete","Departments", new { id = item.DepartmentID })" class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i>Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>