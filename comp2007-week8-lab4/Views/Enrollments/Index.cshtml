@model IEnumerable<comp2007_week8_lab4.Models.Enrollment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h2>Enrollment List</h2>

        <p>
            <a href="@Url.Action("Create","Enrollments")" class="btn btn-success"><i class="fa fa-plus fa-lg"></i>Add Enrollment</a>
        </p>
        <table class="table table-striped table-hover table-bordered table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Course.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Enrollments", new { id = item.EnrollmentID })" class="btn btn-primary"><i class="fa fa-edit fa-lg"></i>Edit</a>
                        <a href="@Url.Action("Details","Enrollments", new { id = item.EnrollmentID })" class="btn btn-default"><i class="fa fa-eye fa-lg"></i>Details</a>
                        <a href="@Url.Action("Delete","Enrollments", new { id = item.EnrollmentID })" class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i>Delete</a>
                    </td>
                </tr>
            }

        </table>
     </div>
</div>