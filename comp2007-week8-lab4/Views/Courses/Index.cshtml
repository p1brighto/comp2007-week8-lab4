@model IEnumerable<comp2007_week8_lab4.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h2>Course List</h2>
        <p>
            <a href="@Url.Action("Create","Courses")" class="btn btn-success"><i class="fa fa-plus fa-lg"></i>Add Course</a>
        </p>
        <table class="table table-striped table-hover table-bordered table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Department.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Credits)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credits)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Courses", new { id = item.CourseID })" class="btn btn-primary"><i class="fa fa-edit fa-lg"></i>Edit</a>
                        <a href="@Url.Action("Details","Courses", new { id = item.CourseID })" class="btn btn-default"><i class="fa fa-eye fa-lg"></i>Details</a>
                        <a href="@Url.Action("Delete","Courses", new { id = item.CourseID })" class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i>Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
